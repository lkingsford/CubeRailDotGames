{{#> main}}
{{#*inline "pageHeader"}}
<script src="static/js/admin.js?version={{state.version}}"></script>
{{/inline}}
{{#*inline "title"}}
cuberail.games - Admin Tools
{{/inline}}
{{#*inline "content"}}
<h1>User Management</h1>
<table>
{{#each user}}
<tr>
    <td>{{userId}}</td><td>{{username}}</td>
    <td>
        <div>
            <input id="password_{{userId}}"/>
            <button onclick="ChangePassword_Click(this)" data-userid="{{userId}}">Change Password</button>
        </div>
        <div>
            <input type="checkbox" id="admin_{{userId}}" data-role="admin" {{#if admin}}checked{{/if}}>Admin</input>
            <input type="checkbox" id="gamemaster_{{userId}}" data-role="gamemaster" {{#if gamemaster}}checked{{/if}}>Gamemaster</input>
            <button onclick="SaveRoles_Click(this)" data-userid="{{userId}}">Save Role Changes</button>
        </div>
    </td>
</tr>
{{/each}}
</table>
{{/inline}}
{{/main}}